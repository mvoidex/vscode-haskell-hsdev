{
	"name": "haskell-hsdev",
	"displayName": "haskell-hsdev",
	"description": "Haskell IDE",
	"version": "0.0.1",
	"engines": {
		"vscode": "^1.39.0"
	},
	"categories": [
		"Other"
	],
	"extensionDependencies": [
		"justusadam.language-haskell"
	],
	"activationEvents": [
		"onLanguage:haskell"
	],
	"main": "./out/src/extension.js",
	"contributes": {
		"commands": [
			{
				"command": "hsdev.insertType",
				"title": "Insert type",
				"category": "haskell"
			},
			{
				"command": "hsdev.selectTarget",
				"title": "Select target",
				"category": "haskell"
			}
		],
		"configuration": {
			"title": "Haskell hsdev configuration",
			"properties": {
				"hsdev.stackPath": {
					"type": "string",
					"default": "stack",
					"description": "(Warning, can break Haskero behavior) path to the stack executable."
				},
				"hsdev.maxAutoCompletionDetails": {
					"type": "number",
					"default": 100,
					"description": "Maximum autocompletion information requests sent to get type info/module in the autocompletion flow. Set to 0 to disable details info in autocompletion."
				}
			}
		}
	},
	"scripts": {
		"vscode:prepublish": "tsc -p ./",
		"compile": "tsc -watch -p ./",
		"update-vscode": "node ./node_modules/vscode/bin/install",
		"postinstall": "node ./node_modules/vscode/bin/install"
	},
	"devDependencies": {
		"@types/glob": "^7.1.1",
		"@types/mocha": "^5.2.7",
		"@types/node": "^12.11.1",
		"glob": "^7.1.4",
		"mocha": "^6.2.2",
		"tslint": "^5.20.0",
		"typescript": "^3.6.4",
		"vscode-test": "^1.2.0",
		"vscode": "^1.1.36"
	},
	"dependencies": {
		"vscode-languageclient": "^5.2.1",
		"vscode-languageserver-types": "^3.14.0"
	}
}
